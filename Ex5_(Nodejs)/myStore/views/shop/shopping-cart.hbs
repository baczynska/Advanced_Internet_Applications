{{# if products }}
	<div class="row">
		<div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">
			{{#each products}}
				<li class="list-group-item align-items-center">
                    <span class="badge">{{  this.qty }}</span>
					<strong> {{ this.item.title }} </strong>
					<span class="label label-success"> $ {{ this.item.price }} </span>
					<div class="btn-group">
						<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
							Action <span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<li><a class="dropdown-item" href="#"> Buy </a></li>
							<li><a href="/reduce-by-one/{{this.item._id}}" class="dropdown-item"> Reduce by 1 </a></li>
							<li><a class="dropdown-item" href="/remove-all/{{this.item._id}}"> Remove All </a></li>
						</ul>
					</div>
					<span class="badge badge-secondary" style="float:right">{{ this.quantity }}</span>
				</li>
				{{/each}}
			</ul>	
		</div>
	</div>
	</br>
	<div class="row">
		<div class="col-sm-6 col-md-offset-3 col-sm-offset-3 ">
			<strong> Total: $ {{ totalPrice }}</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
			<a href="#" type="button" class="btn btn-success"> Buy </a>
		</div>
	</div>

{{ else }}

	<div class="row">
		<div class="col-sm-6 col-md-offset-3 col-sm-offset-3">
			<br>
			<h2> No items in Cart </h2>  
		</div>
	</div>
	
{{/if}}